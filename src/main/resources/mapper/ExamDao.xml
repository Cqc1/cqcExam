<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exam.dao.ExamDao">

    <resultMap type="com.exam.entity.Exam" id="ExamMap">
        <result property="examid" column="examId" jdbcType="INTEGER"/>
        <result property="paperid" column="paperId" jdbcType="INTEGER"/>
        <result property="courseid" column="courseid" jdbcType="INTEGER"/>
        <result property="stuid" column="stuId" jdbcType="INTEGER"/>
        <result property="grade" column="grade" jdbcType="VARCHAR"/>
        <result property="term" column="term" jdbcType="VARCHAR"/>
        <result property="major" column="major" jdbcType="VARCHAR"/>
        <result property="institution" column="institution" jdbcType="VARCHAR"/>
        <result property="extime" column="exTime" jdbcType="INTEGER"/>
        <result property="explace" column="exPlace" jdbcType="VARCHAR"/>
        <result property="exdate" column="exDate" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="isexam" column="isExam" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ExamMap">
        select
          examId, paperId, courseid, stuId, grade, term, major, institution, exTime, exPlace, exDate, description, isExam
        from cqc_exam.exam
        where examId = #{examid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ExamMap">
        select
          examId, paperId, courseid, stuId, grade, term, major, institution, exTime, exPlace, exDate, description, isExam
        from cqc_exam.exam
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ExamMap">
        select
          examId, paperId, courseid, stuId, grade, term, major, institution, exTime, exPlace, exDate, description, isExam
        from cqc_exam.exam
        <where>
            <if test="examid != null">
                and examId = #{examid}
            </if>
            <if test="paperid != null">
                and paperId = #{paperid}
            </if>
            <if test="courseid != null">
                and courseid = #{courseid}
            </if>
            <if test="stuid != null">
                and stuId = #{stuid}
            </if>
            <if test="grade != null and grade != ''">
                and grade = #{grade}
            </if>
            <if test="term != null and term != ''">
                and term = #{term}
            </if>
            <if test="major != null and major != ''">
                and major = #{major}
            </if>
            <if test="institution != null and institution != ''">
                and institution = #{institution}
            </if>
            <if test="extime != null">
                and exTime = #{extime}
            </if>
            <if test="explace != null and explace != ''">
                and exPlace = #{explace}
            </if>
            <if test="exdate != null and exdate != ''">
                and exDate = #{exdate}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
            <if test="isexam != null and isexam != ''">
                and isExam = #{isexam}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="examid" useGeneratedKeys="true">
        insert into cqc_exam.exam(paperId, courseid, stuId, grade, term, major, institution, exTime, exPlace, exDate, description, isExam)
        values (#{paperid}, #{courseid}, #{stuid}, #{grade}, #{term}, #{major}, #{institution}, #{extime}, #{explace}, #{exdate}, #{description}, #{isexam})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cqc_exam.exam
        <set>
            <if test="paperid != null">
                paperId = #{paperid},
            </if>
            <if test="courseid != null">
                courseid = #{courseid},
            </if>
            <if test="stuid != null">
                stuId = #{stuid},
            </if>
            <if test="grade != null and grade != ''">
                grade = #{grade},
            </if>
            <if test="term != null and term != ''">
                term = #{term},
            </if>
            <if test="major != null and major != ''">
                major = #{major},
            </if>
            <if test="institution != null and institution != ''">
                institution = #{institution},
            </if>
            <if test="extime != null">
                exTime = #{extime},
            </if>
            <if test="explace != null and explace != ''">
                exPlace = #{explace},
            </if>
            <if test="exdate != null and exdate != ''">
                exDate = #{exdate},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="isexam != null and isexam != ''">
                isExam = #{isexam},
            </if>
        </set>
        where examId = #{examid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cqc_exam.exam where examId = #{examid}
    </delete>

</mapper>